<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UserMatchActivity"
        android:orientation="vertical"
        android:layout_margin="15dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/teamAName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team A"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginTop="17sp"
                    android:textColor="@color/colorPrimary"/>
            <TextView
                    android:id="@+id/scoreTeamA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="70sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginBottom="17sp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/teamBName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team B"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="17dp"
                    android:gravity="center"/>
            <TextView
                    android:id="@+id/scoreTeamB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="70sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_marginBottom="17sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:id="@+id/timeMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10:11"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="90sp"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/statsMatch"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/custom_recview_user"/>

</LinearLayout>