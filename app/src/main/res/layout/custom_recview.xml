<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/namePlayerA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C. Ronaldo"
            />
    <TextView
            android:id="@+id/timeEventA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20'"
            android:layout_toLeftOf="@+id/iconEvent"
            android:layout_marginRight="10sp"/>
    <ImageView
            android:id="@+id/iconEvent"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/yellow_card"
            android:layout_centerHorizontal="true"/>
    <TextView
            android:id="@+id/namePlayerB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="C. Ronaldo"
    />
    <TextView
            android:id="@+id/timeEventB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20'"
            android:layout_toRightOf="@+id/iconEvent"
            android:layout_marginLeft="10sp"/>

</RelativeLayout>